@page
@model JoinModel

@{
    ViewData["Title"] = "Join Session";
    Layout = "~/Areas/Identity/Pages/_PlanningCreateLoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionCode" class="control-label"></label>
                <input asp-for="SessionCode" class="form-control" />
                <span asp-validation-for="SessionCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
