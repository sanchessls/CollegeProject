@page
@model Feature

@{
    ViewData["Title"] = "Session: " + Model.PlanningSessionId;
}

<div class="col-md-12 sessionHeader">
    @{
        <h4>Session : @Model.DescriptionSession</h4>
        <hr class="separator">
        <h4>Feature : @Model.DescriptionFeature</h4>
        <br>
    }

    <div class="sessionHeader col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="margin:5px;">
                    <div class="col-md-3">
                        <div id="card1" CardValue="1" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>1</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="card2" CardValue="2" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>2</span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div id="card3" CardValue="3" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>3</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="card5" CardValue="5" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin:5px;">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        <div id="card8" CardValue="8" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>8</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="card16" CardValue="16" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>16</span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div id="card32" CardValue="32" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>32</span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div id="card64" CardValue="64" class="scrum-card" onclick="updatePostID(this.id)">
                            <span>64</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>

        <div style="align-content:center;">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.SelectedValue)
                    @Html.HiddenFor(model => model.FeatureId)
                    @Html.HiddenFor(model => model.PlanningSessionId)
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.UserCreator)
{
    <h4>Session options</h4>
    <hr class="separator">

    <div class="sessionHeader col-md-12">

        <div class="row">
            <div class="col-md-6">

                <form method="post" class="sessionHeaderIntern">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Close Feature" class="btn btn-primary" />
                        <input type="submit" value="Cancel Feature" class="btn btn-primary" />
                    </div>
                </form>

            </div>
            <div class="col-md-6">

                <div class="col-md-12 sessionHeaderIntern">
                    <div class="row">
                        <div class="col-md-8">User</div>
                        <div class="col-md-4">Status</div>
                    </div>
                    <hr class="separatorHead">

                    @foreach (var item in Model.UsersVoting)
                    {
                        <div class="row">
                            <div class="col-md-8">@item.UserName</div>

                            @{
                                if (@item.Status)
                                {
                                    <div class="col-md-4" style="padding-left:0px;">
                                        <div class="buttonStatus" style="background-color:lightgreen">
                                            Voted
                                        </div>

                                    </div>
                                }
                                else
                                {
                                    <div class="buttonStatus" style="background-color:lightcoral">
                                        Waiting
                                    </div>
                                }
                            }


                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr class="separator">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/Feature.js"></script>
    

    <script type="text/javascript">
        console.log("EnterInGroup");
        EnterInGroup("@Model.UserGroup");


        function updatePostID(val) {
            clearCards();

            var element = document.getElementById(val);
            element.classList.add("cardSelected");

            document.getElementById('SelectedValue').value = element.getAttribute("CardValue");

        }

        function clearCards() {
            var elements = document.getElementsByClassName("scrum-card");
            for (var i = 0; i < elements.length; i++) {
                elements[i].classList.remove("cardSelected");
            }
        }


        function CallFunctionFromJS() {

            alert("CallFunctionFromJS");
        }


    </script>

}

