@page
@model Session

@{
    ViewData["Title"] = "Session";
}

<div class="col-md-12" style="padding-bottom:15px;">
    @{
        <h4 style="margin-left:5px;"> Session: @Model.DescriptionSession</h4>
    }


    @if (Model.UserCreator)
    {
        <div class="sessionHeader">
            <div class="row">
                <form id="formSession" method="post" class="col-md-12">

                    <div class="row">

                        <div class="col-md-8">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="FeatureIdentification" class="control-label"></label>
                                <input asp-for="FeatureIdentification" class="form-control" />
                                <span asp-validation-for="FeatureIdentification" class="text-danger"></span>

                                <label asp-for="FeatureDescription" class="control-label"></label>
                                <input asp-for="FeatureDescription" class="form-control" />
                                <span asp-validation-for="FeatureDescription" class="text-danger"></span>

                                @Html.Hidden("PlanningSessionId", Model.PlanningSessionId)
                                @Html.Hidden("DescriptionSession", Model.DescriptionSession)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <br>
                                <input id="idButtonSession" type="submit" value="Create new feature" class="btn btn-primary" />
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    }


<div class="sessionHeader">
    <div class="row">
        <div class="col-md-2 title">Identification</div>
        <div class="col-md-6 title">Description</div>
        <div class="col-md-2 title">Status</div>
        <div class="col-md-2 title">Average</div>
    </div>
    <hr class="separator">

    @{
        var colour = "";
    }

    @foreach (var item in Model.FeaturesList)
    {

        // if (colour == "") { colour = "rgba(200,0,0,0.125)"; } else { colour = ""; }


        <div class="row ColumnsOfTable" style="background-color:@colour">
            <div class="col-md-2"><a href="@Url.Content("~/Identity/Planning/Feature?id="+item.Id)">@item.Identification</a></div>
            <div class="col-md-6">@item.Description</div>



            <div class="col-md-2">
                <div class="buttonStatus" style="background-color:@item.StatusColor()">
                    @item.Status
                </div>

            </div>

            @{
                var average = @item.Average();
                if (average > 0)
                {
                    <div class="col-md-2">average</div>
                }
                else
                {
                    <div class="col-md-2">N/A</div>
                }
            }


        </div>
        <hr class="separator">
    }


</div>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
