@page
@model CreateModel

@{
    ViewData["Title"] = "Create Session";
    Layout = "~/Areas/Identity/Pages/_PlanningCreateLoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formCreateSession" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanningSessionDescription" class="control-label"></label>
                <input asp-for="PlanningSessionDescription" class="form-control" />
                <span asp-validation-for="PlanningSessionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="idButtonCreateSession" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
