@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs nav-justified">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Planning/JiraFilter?code=8F8VrW&favourite=true">Favourite Filters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Planning/JiraFilter?code=8F8VrW&favourite=false">All Filters</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts
{
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            var current = location.href;
            console.log(current);
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>


}