@using ScrumPokerPlanning.Models

@model Tuple<string, List<ScrumPokerPlanning.Models.JiraFilter>,string>
    <div class="sessionHeader">
        <div class="row">
            <div class="col-md-2 title">Identification</div>
            <div class="col-md-10 title">Name</div>
        </div>
        
        <hr class="separatorHead">

        @foreach (var item in Model.Item2.OrderByDescending(x => x.Id))
        {

            <div class="row ColumnsOfTable">
                <div class="col-md-2"> @item.Id </div>
                       
                <div class="col-md-10"><a href="@Url.Content("~/Identity/Planning/JiraFilterIssue?code="+ Model.Item1 +"&filtername=" + item.Name +"&FilterID=" + item.Id + "&favourite="+Model.Item3)"> @item.Name.Trim()</a></div>
            </div>


            <hr class="separator">
        }


    </div>
