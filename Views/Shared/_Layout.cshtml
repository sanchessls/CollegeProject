@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var VersionStr = @Configuration["SoftwareInformation:Version"];
    var VersionMessage = @Configuration["SoftwareInformation:VersionMessage"];

    var VersionFoot = VersionStr + " - " + VersionMessage;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scrum Poker Planning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?v=@VersionStr"  />
</head>
<body class="MainContent">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 HeaderAndFooter">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Scrum Poker Planning</a>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <partial name="_LoginPartial.cshtml" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container containerPoker">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white box-shadow HeaderAndFooter" >
        <div class="container">
            &copy; 2020 - Scrum Poker Planning - @VersionFoot
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js?v=@VersionStr" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
