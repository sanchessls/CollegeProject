    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableOne[0].HowTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableOne[0].Line)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableOne[0].Plataform)
            </th>
