        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HowTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plataform)
            </td>
